<h1>POSTS</h1>

<%= link_to  "crie seu post",new_post_path,class: "btn btn-info"%>
<table class="table text-light">
  <thead>
    <tr>
      <th> Title</th>
      <th> Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody data-target="post.row" data-action="click->post#show">
    <% @posts.each do |post|%>
      <tr>
        <td> <%= post.title %></td>
        <td> <%= post.body %></td>
        <td> <%= link_to "Show",post ,class: "btn btn-primary"%></td>
        <td> <%= link_to "Edit",edit_post_path(post),class: "btn btn-warning" %></td>
        <td> <%= button_to "Delete",post,method: :delete,data: {confirm: "estÃ¡ certo disso?"} ,class: "btn btn-danger"%></td>
      </tr>
    <%end%>
  </tbody>
</table>